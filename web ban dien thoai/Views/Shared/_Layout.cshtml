        <script>
            function toggleSupportBubble() {
                var supportForm = document.getElementById('support-form');
                supportForm.style.display = (supportForm.style.display === 'none' || supportForm.style.display === '') ? 'block' : 'none';
            }

            // Trong file script.js
            function sendFeedback() {
                // Lấy giá trị từ các ô nhập liệu
                var name = document.getElementById('name').value;
                var lienLac = document.getElementById('lienLac').value;
                var vanDe = document.getElementById('issue').value;
                var noiDung = document.getElementById('noiDung').value;

                // Gửi dữ liệu lên server sử dụng AJAX
                $.ajax({
                    type: 'POST',
                    url: '/GopY/LuuGopY',
                    data: {
                        MaGY: 0, // Giả sử MaGY là tự tăng (IDENTITY), không cần gửi giá trị
                        TenKH: name,
                        LienLac: lienLac,
                        VanDe: vanDe,
                        NoiDung: noiDung
                    },
                    success: function (response) {
                        console.log('Dữ liệu đã được lưu thành công!');
                        showThankYouMessage();
                    },
                    error: function (error) {
                        console.error('Lỗi khi lưu dữ liệu:', error);
                    }
                });

                // Xóa nội dung ô nhập liệu
                document.getElementById('name').value = '';
                document.getElementById('lienLac').value = '';
                document.getElementById('issue').value = '';
                document.getElementById('noiDung').value = '';

                // Ẩn Form sau khi gửi phản hồi
                toggleSupportBubble();
            }

            function showThankYouMessage() {
                var thankYouMessage = document.getElementById('thank-you-message');
                thankYouMessage.style.display = 'block';

                // Đặt timeout để ẩn thông báo sau 3 giây (3000 miligiây)
                setTimeout(function () {
                    thankYouMessage.style.display = 'none';
                }, 3000);
            }

        </script>
