    
@using web_ban_dien_thoai.Models
@model IEnumerable<DienThoai>
@{
    ViewBag.Title = "Trang chủ - DAPM";
}
<meta charset="utf-8" />

<meta name="viewport" content="width=device-width, initial-scale=1.0">

<title>Trang chủ </title>
<style>
    body {
        margin: 10px 10px 10px 10px;
    }

    button {
        transition-duration: 0.4s;
        border: 2px solid #008CBA;
        border-radius: 33px;
    }

        button:hover {
            background-color: #008CBA;
            color: white;
        }
    /*nút quay lại đầu trang*/
    .dau-trang {
        display: none;
        position: fixed;
        bottom: 20px;
        right: 30px;
        z-index: 99;
        font-size: 18px;
        border: none;
        outline: none;
        border-radius: 50%;
        transition-duration: 0.4s;
        border: 2px solid #008CBA;
        cursor: pointer;
    }

        .dau-trang:hover {
            background-color: #008CBA;
            color: white;
        }



    /* Add this CSS to your existing stylesheet or in a <style> tag in the <head> section of your HTML */

    .hang-km {
        display: flex;
        justify-content: center; /* Centers the "sukien" elements */
    }

    .sukien {
        box-sizing: border-box; /* Ensures padding and border are included in the width */
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        width: 24%;
        padding: 10px 20px;
        background-color: snow;
        margin: 0 5px; /* Add a small margin between the "sukien" elements */
    }
</style>
<body>
    <br />
    <div>
        <div id="demo" class="carousel slide" data-ride="carousel" style="margin-left:0px;margin-right:0px;margin-top:-24px">
            <div class="carousel-inner" style="z-index:1">
                <div class="carousel-item active">

                    <img src="~/images/banner/8b2addc3e2c735996cd6.jpg" style="width: 100%; height: 500px " />
                </div>
                <div class="carousel-item">
                    <img src="~/images/banner/cc57487d7379a427fd68.jpg" style="width: 100%; height: 500px " />
                </div>
                <div class="carousel-item">
                    <img src="~/images/banner/d8414a207324a47afd35.jpg" style="width: 100%; height: 500px " />
                </div>

            </div>
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>



        </div>

        <div class="tang-4" style="margin-left: 100px; margin-right: 100px; font-weight: bold;">
            <div style="font-size: 25px;margin-left: -75px;margin-top: 10px;">MỚI RA MẮT</div>
            <div class="hang-tin-tuc" style="padding: 0 40px 0 40px; margin-top: 10px; display: flex; justify-content: space-between; justify-items: center;">
                @foreach (var DienThoai in Model)
                {
                    <div class="tintuc" style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); transition: 0.3s; width: 22%; padding: 10px 20px; background-color: snow; border-radius: 4px;">

                        <a href="@Url.Action("Details", "SanPham", new { id = DienThoai.MaDT })">
                            <img src="~/images/san-pham/@DienThoai.HinhChiTiet0" alt="error" style="border-radius: 10px 5px 0 0;width:100%">
                        </a>

                        <div style="margin-top:10px;">
                            <h4 class="tieu-de-tt" style="font-size:14px">@DienThoai.TenDT</h4>

                            <div style="margin-top: 10px;">
                                <a style="border: 1px solid grey; padding: 3.5px; border-radius: 10px;">@DienThoai.LoaiManHinh</a>
                                <a style="border: 1px solid grey; padding: 3.5px; border-radius: 10px;">@DienThoai.ManHinh"</a>
                            </div>

                            @if (DienThoai.Discount == 0)
                            {
                                <p class="gioi-thieu-tt" style="font-size:18px;color:orangered;margin-top:10px;">
                                    @DienThoai.GiaCuoi$
                                </p>
                            }

                            @if (DienThoai.Discount > 0)
                            {
                                <div style="margin-top: 10px; font-size: 14px;color:gray;">
                                    <a style="  padding: 3.5px;"> <del style="color: gray;">@DienThoai.GiaGoc$</del></a>
                                    <a style=" padding: 3.5px; ">@DienThoai.Discount%</a>
                                </div>
                                <p class="gioi-thieu-tt" style="font-size:18px;color:orangered;margin-top:10px;">
                                    @DienThoai.GiaCuoi$
                                </p>
                            }
                        </div>
                    </div>
                }
            </div>
            <div class="nut-xem-them-fake" style="text-decoration: none; color: black; justify-content: center; align-items: center; text-align: center;margin-top:40px;">
                <div class="btn btn-outline-secondary" style="width: 300px; cursor: pointer;" onclick="redirectToSanPhamIndex()">
                    Xem thêm
                </div>
                <script>
                    function redirectToSanPhamIndex() {
                        window.location.href = "/sanpham/index";
                    }
                </script>
            </div>

        </div>
        <br />
        <div class="tang-5" style="margin-left: 100px; margin-right: 100px; font-weight: bold;">
            <div style="font-size: 25px;margin-left: -75px;margin-top: 10px;">BÁN CHẠY</div>
            <div class="hang-tin-tuc" style="padding: 0 40px 0 40px; margin-top: 10px; display: flex; justify-content: space-between; justify-items: center;">

                <div class="tintuc" style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); transition: 0.3s; width: 22%; padding: 10px 20px; background-color: snow; border-radius: 4px;">

                    <a href="">
                        <img src="~/images/san-pham/sony-xperia-5-white-600x600.jpg" alt="error" style="border-radius: 10px 5px 0 0;width:100%">
                    </a>
                    <div style="margin-top:10px;">
                        <h4 class="tieu-de-tt" style="font-size:14px">Sony Xperia XA2 Ultra</h4>
                        <div style="margin-top: 10px;">
                            <a style="border: 1px solid gray; padding: 3.5px; border-radius: 10px;">Full HD+</a>
                            <a style="border: 1px solid gray; padding: 3.5px; border-radius: 10px;">6.55"</a>
                        </div>
                        <div style="margin-top: 10px; font-size: 14px;color:gray;">
                            <a style="  padding: 3.5px;"> <del style="color: gray;">1000$</del></a>
                            <a style=" padding: 3.5px; ">-50%</a>
                        </div>
                        <p class="gioi-thieu-tt" style="font-size:18px;color:orangered;margin-top:10px;">
                            500$
                        </p>
                    </div>
                </div>

            </div>
            <div class="nut-xem-them-fake" style="text-decoration: none; color: black; justify-content: center; align-items: center; text-align: center;margin-top:40px;">
                <div class="btn btn-outline-secondary" style="width: 300px; cursor: pointer;" onclick="redirectToSanPhamIndex()">
                    Xem thêm
                </div>
                <script>
                    function redirectToSanPhamIndex() {
                        window.location.href = "/sanpham/index";
                    }
                </script>
            </div>
        </div>
    </div>
    <br />





</body>
